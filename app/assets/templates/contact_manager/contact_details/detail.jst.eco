<span class="contact-detail-icon main-icon dicon-<%= @icon %>"></span>
<% if @modeltype == "hashtag": %>
  <span class="contact-detail-value"><a href="#hashtags/show/<%= @detail._id%>"><%= @value %></a></span>
<% else: %>
  <span class="contact-detail-value"><%= @value %></span>
<% end %>
<span class="contact-detail-edit"><input type="text" name="value" id="edit_value" class="input-text" value="<%= @value %>"></input></span>
<span class="contact-detail-icon contact-detail-delete dicon-minus" style="float: right;"></span>
<div style="clear:both;"></div>
