<div class="social-search-image">   
    <img class="image-thumb medium" src="<%= @twitter.profile_image_url_https %>" alt=""/>  
</div>
<div class="result-text">
  <h3><%= @twitter.name %></h3>
  <p>@<%= @twitter.screen_name %></p>    
</div>
<div class="link-action">
  <button class="button socialLinkButton" data-handle="http://twitter.com/<%= @twitter.screen_name %>" data-pictureurl="<%= @twitter.profile_image_url_https %>" data-socialid="<%= @twitter.screen_name %>" data-socialtype="<%= @twitter.socialType %>">Link</button>  
</div>