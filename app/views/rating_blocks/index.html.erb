<h1>Listing Current Rating Blocks</h1>

<table>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Rates On</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    <% @rating_blocks.each do |block| %>
        <tr>
            <td><%= block.name %></td>
            <td><%= block.description %></td>
            <td><%= block.section %></td>
            <td><%= link_to 'Show', block %></td>
            <td><%= link_to 'Edit', edit_rating_block_path(block) %></td>
            <td><%= link_to 'Destroy', block, confirm: 'Are you sure?', method: :delete %></td>
        </tr>
    <% end %>
</table>

