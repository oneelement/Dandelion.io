<div id="sign-description">
    <h2>
    <span class="grey">Ripple is the only 
    <span class="red">contact manager</span> where 
    <span class="white">YOU</span> have control over the details 
    <span class="white">YOUR FRIENDS</span> keep about you.
    </span></h2>
    <p>Membership is free, and always will be.</p>
    <p><span class="white">Not a member? <%= link_to "Sign up", new_registration_path(resource_name) %><br /></span></p>

  

    <div style="clear: both"></div>
</div>



<div id="sign-signup">




    <h2>Sign in below</h2>
<%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}", :class => "red center" if msg.is_a?(String) %>
  <%- end -%>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>


<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
      <div><%= f.email_field :email, :placeholder => 'Enter Your Email' %></div>
      <div><%= f.password_field :password, :placeholder => 'Enter Your Password' %></div>
      <div><%= f.submit "Sign in", :class => 'btn btn-success' %></div>
    <% end %>
    <h3 class="center">Or</h3>
    <a href="/auth/facebook" class="btn btn-primary button-wide-bold"><%= image_tag "facebook-f.png", :class => 'facebook-f' %><span>Sign in with facebook</span></a>

    <%= link_to "Forgot your password?", new_password_path(resource_name), :class => 'link-forgot-password' %>
</div>
<div style="clear: both"></div>