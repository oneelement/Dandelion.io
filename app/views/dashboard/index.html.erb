<h1>Listing dashboards</h1>

<%= form_tag contacts_path, :method => 'get', :id => 'search_form' do %>
    <p>
        <%= text_field_tag :search, params[:search], :id => 'autocomplete' %>
        <%=	 submit_tag "Search", :name => nil , :id => 'searchbutton' %>
    </p>
<% end %>


<br />

<%= link_to 'Contacts', contacts_path %>
<br />

<% if can? :read, Organisation %>
  <%= link_to 'Organisations', organisations_path %>
  <br />
<% end %>


<% if can? :create, Entity %>
  <%= link_to 'Entities', entities_path %>
<br />
<% end %>

<% if can? :read, User %>
  <%= link_to 'Manage Users', user_index_path %>
  <br />
<% end %>
<br />

<%= link_to('Log out', destroy_user_session_path, :method => :delete) %>
