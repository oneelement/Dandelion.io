<!DOCTYPE html>
<html>
<head>
  <title>Onelement</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div id="account-info">
    <ul class="nav pull-right">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <%= current_user.first_name %> <%= current_user.last_name %>
      <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
	<li><%= link_to 'Profile', user_path(current_user.id) %></li>
	<li class="divider"></li>
	<li><%= link_to('Log out', destroy_user_session_path, :method => :delete) %></li>
      </ul>
    </li>
    </ul>
  </div>
</div>

<div class="outer-north"></div>


<div class="outer-center"> 
  <div class="content">
    <%= yield %>
  </div>
</div> 

<div class="outer-west">
  <div class="content">
    <ul class="nav-west">
      <li>
	<a href="/">
	<span class="nav-west-icon">	  
	  <!--<span class="nav-west-icon-mask"></span>-->
	  <span class="nav-west-icon-image"><%= image_tag "home-icon.png" %></span>
	</span>
	<span class="nav-west-title">Home</span>
	<span class="nav-west-desc">master search and task list</span>
	</a>
      </li>
      <li>
	<a href="/dashboard">
	<span class="nav-west-icon">	  
	  <!--<span class="nav-west-icon-mask"></span>-->
	  <span class="nav-west-icon-image"><%= image_tag "dashboard-icon.png" %></span>
	</span>
	<span class="nav-west-title">Dashboard</span>
	<span class="nav-west-desc">overview of recent activity</span>
	</a>
      </li>
    </ul>
  </div>
  <div class="footer">
  </div>
</div> 



</body>
</html>
